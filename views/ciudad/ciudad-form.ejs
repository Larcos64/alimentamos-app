<%- include('../layout') %>

<div class="container mt-4">
  <h2><%= ciudad ? 'Editar Ciudad' : 'Agregar Ciudad' %></h2>

  <form action="<%= ciudad ? '/ciudad/editar/' + ciudad.codigo : '/ciudad/guardar' %>" method="POST">
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre de la Ciudad</label>
      <input
        type="text"
        class="form-control"
        id="nombre"
        name="nombre"
        value="<%= ciudad ? ciudad.nombre : '' %>"
        required
      >
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="/ciudad" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
